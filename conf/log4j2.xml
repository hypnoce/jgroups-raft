<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appenders>
        <!-- follow=true doesn't work on Windows with jline/jansi -->
        <Console name="STDOUT" target="SYSTEM_OUT" follow="false">
            <!--PatternLayout pattern="%-7d{HH:mm:ss,SSS} [%p] %c: %m%n"/-->
            <PatternLayout pattern="%r [%p] %c{1}: %m%n"/> 
        </Console>
    </appenders>
    <loggers>
        <root level="info">
            <appender-ref ref="STDOUT"/>
        </root>
        <logger name="org.jgroups" level="info"/>
        <logger name="org.jgroups.protocols.raft.RAFT"     level="debug"/>
        <logger name="org.jgroups.protocols.raft.ELECTION" level="debug"/>
    </loggers>
</configuration>
